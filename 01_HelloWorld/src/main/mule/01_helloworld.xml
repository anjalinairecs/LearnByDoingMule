<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:http="http://www.mulesoft.org/schema/mule/http" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd">

	<http:listener-config name="httpListenerConfigMuleTutorial" doc:name="HTTP Listener config" doc:id="httpListenerConfigMuleTutorial" basePath="/" >
		<http:listener-connection host="0.0.0.0" port="9010" />
	</http:listener-config>
	
	<flow name="flowHelloWorld" doc:id="flowHelloWorld" >
		<http:listener doc:name="listenerHelloWorld" doc:id="listenerHelloWorld" config-ref="httpListenerConfigMuleTutorial" path="helloWorld"/>
		<set-payload value="Hello World! What a beautiful day it is ;)" doc:name="setPayloadHelloWorld" doc:id="setPayloadHelloWorld" />
	</flow>
</mule>
